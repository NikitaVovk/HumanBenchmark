<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ocean"
    tools:context=".VisualMemoryTest3x3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/heart_5x5_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/heart"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/heart_5x5_2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textVisualViewLevel_5x5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:text="Level: 1"
            android:textColor="@color/see_breath"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/visualButton_3x3_8"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_marginTop="44dp"
            app:backgroundTint="@color/wave"
            app:layout_constraintEnd_toStartOf="@+id/visualButton_3x3_9"
            app:layout_constraintStart_toEndOf="@+id/visualButton_3x3_7"
            app:layout_constraintTop_toBottomOf="@+id/visualButton_3x3_5" />

        <Button
            android:id="@+id/visualButton_3x3_7"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="44dp"
            app:backgroundTint="@color/wave"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visualButton_3x3_4" />

        <Button
            android:id="@+id/visualButton_5x5_3"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            app:backgroundTint="@color/wave"
            app:layout_constraintEnd_toStartOf="@+id/visualButton_5x5_4"
            app:layout_constraintStart_toEndOf="@+id/visualButton_5x5_2"
            app:layout_constraintTop_toBottomOf="@+id/textVisualViewLevel_5x5" />

        <Button
            android:id="@+id/visualButton_3x3_5"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_marginTop="44dp"
            app:backgroundTint="@color/wave"
            app:layout_constraintEnd_toStartOf="@+id/visualButton_3x3_6"
            app:layout_constraintStart_toEndOf="@+id/visualButton_3x3_4"
            app:layout_constraintTop_toBottomOf="@+id/visualButton_5x5_3" />

        <Button
            android:id="@+id/visualButton_5x5_2"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="50dp"
            android:shadowColor="#FFFFFF"
            android:textIsSelectable="false"
            app:backgroundTint="@color/wave"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textVisualViewLevel_5x5"
            app:strokeColor="#FFFFFF" />

        <Button
            android:id="@+id/visualButton_5x5_4"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="47dp"
            android:layout_marginRight="47dp"
            app:backgroundTint="@color/wave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textVisualViewLevel_5x5" />

        <Button
            android:id="@+id/visualButton_3x3_4"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="44dp"
            app:backgroundTint="@color/wave"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visualButton_5x5_2" />

        <Button
            android:id="@+id/visualButton_3x3_6"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="47dp"
            android:layout_marginRight="47dp"
            app:backgroundTint="@color/wave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visualButton_5x5_4" />

        <Button
            android:id="@+id/visualButton_3x3_9"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="47dp"
            android:layout_marginRight="47dp"
            app:backgroundTint="@color/wave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visualButton_3x3_6" />

        <ImageView
            android:id="@+id/heart_5x5_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/heart"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/textVisualViewLevel_5x5"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/heart_5x5_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/heart"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/heart_5x5_1"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>